<form action="/admin/modifyUser" method="post" class="col-12 px-5 mb-1 bg-light mt-2 py-4" style="border-radius: 2em;">
    <h5 class="text-center">Edit User</h5>
    <hr class="mx-5 my-1">

    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" name="email" class="form-control" id="email" placeholder="Enter email ID" required>
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Full Name</label>
        <input type="text" placeholder="Enter your full name" pattern="[A-Za-z ]*"
            oninvalid="setCustomValidity('Please enter alphabetic characters only')" oninput="setCustomValidity('')"
            name="name" class="form-control" id="name" required>
    </div>

    <div class="mb-3">
        <label for="phone" class="form-label">Phone number</label>
        <input type="number" name="phone" class="form-control" id="phone" placeholder="Enter contact number">
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="admin_status" class="form-label">Admin status</label>
            <select name="admin_status" class="form-select" id="admin_status" required>
                <option value="false">false</option>
                <option value="true">true</option>
            </select>
        </div>
        <div class="col-md-6 pt-3">
            <div class="text-center mb-2">
                <button type="submit" class="btn btn-primary mt-3">Edit User</button>
            </div>
        </div>
    </div>
</form>
