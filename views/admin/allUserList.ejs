<button style="border: 0; background-color: transparent;" onclick="toggleVisibility()">
  <img style="width: 5em; transition: transform 0.3s;" src="https://img.freepik.com/free-icon/user_318-180888.jpg"></img> 
  <br>
  <label style="font-size: 1.2rem; color: #333;">User Database</label>
</button>

<br>

<div id="content" class="hidden" style="display: none; padding: 1rem;">
  <hr>
  <table class="table table-striped">
      <thead>
          <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email Address</th>
              <th scope="col">Phone</th>
              <th scope="col">Admin Status</th>
          </tr>
      </thead>
      <tbody>
          <% if (users.length > 0){
              for(i=0;i<users.length;i++){ %>
                  <tr>
                      <th scope="row">
                          <%= (i+1) %>
                      </th>
                      <td>
                          <%=users[i].name%>
                      </td>
                      <td>
                          <%=users[i].email%>
                      </td>
                      <td>
                          <%=users[i].phone%>
                      </td>
                      <td>
                          <% if(locals.users[i].admin_status){ %>
                              <button type="submit" class="btn btn-success py-0 px-2 btn-sm"> true </button>
                          <% } else { %>
                              <button type="submit" class="btn btn-danger py-0 px-2 btn-sm">false</button>
                          <% } %>
                      </td>
                  </tr>
              <% } } %>
      </tbody>
  </table>
</div>

<script>
  function toggleVisibility() {
      var content = document.getElementById("content");
      content.classList.toggle("hidden");
      var buttonImage = document.querySelector("button img");
      buttonImage.style.transform = content.classList.contains("hidden") ? "rotate(0deg)" : "rotate(180deg)";
  }
</script>
