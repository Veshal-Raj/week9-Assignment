<div class="mt-3">
  <hr>
  <% if (locals.searchData) { %>
      <a class="btn btn-danger mb-3 px-2" href="/admin">Close</a>
      <table class="table table-striped table-bordered">
          <thead>
              <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Email Address</th>
                  <th scope="col">Phone</th>
                  <th scope="col">Account Type</th>
              </tr>
          </thead>
          <tbody>
              <% for (i = 0; i < locals.searchData.length; i++) { %>
                  <tr>
                      <th scope="row"><%= (i + 1) %></th>
                      <td><%= locals.searchData[i].name %></td>
                      <td><%= locals.searchData[i].email %></td>
                      <td><%= locals.searchData[i].phone %></td>
                      <td>
                          <% if (locals.searchData[i].admin_status) { %>
                              <button class="btn btn-success btn-sm">Admin</button>
                          <% } else { %>
                              <button class="btn btn-danger btn-sm">User</button>
                          <% } %>
                      </td>
                  </tr>
              <% } %>
          </tbody>
      </table>
  <% } %>
</div>
