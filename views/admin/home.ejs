<%- include('../layouts/header') %>

   <header>
    <nav class="navbar navbar-light" style="background-color: #f8f9fa;"> <!-- Light Gray Background -->
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <!-- You can add your logo or other branding here -->
            </div>
            <a class="navbar-brand ps-4 fw-bold text-primary" href="#" style="font-size: 28px;">ADMIN PANEL</a>
            <form class="d-flex align-items-center" action="/admin/logout" method="post">
                <button type="submit" class="btn btn-danger">Logout</button>
            </form>
        </div>
    </nav>
</header>


    <!-- alert -->
    <% if(locals.alert){%> 
        <div class="alert alert-warning text-center mb-0">
            <%=locals.alert%>
        </div>
        <% } %>

    <div class="container-fluid" style="background-color: #f5f5f5;">
 
        <div class="row text-center">
            <div class="col-md-6">
                <img class="w-75 "
                    src="https://thumbs.dreamstime.com/b/admin-office-binder-wooden-desk-table-colored-pencil-pencils-pen-notebook-paper-79046621.jpg"></img>

                <div class="text-center px-5 pt-5">
                    <form action="/admin/search" method="post" class="d-flex">
                        <input class="form-control me-2" name="search" type="search" placeholder="Search for users"
                            aria-label="Search">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </form>
                    <div class="pb-1 pt-3">


                    </div>
                </div>
                <%- include('searchResult') %>
            </div>
            <div class="col-md-6 p-4">
                <h3 class="pt-4 ">Welcome <%=locals.username? locals.username :'Admin' %>
                </h3>
                <hr>

                <div class="text-center pb-4">
                    <%- include('allUserList') %>
                        <hr>
                </div>

                <div class="d-flex p-3 " style="border-radius: 2em; background-color: #f0f3f5">
                   
                    <div class="text-start col-md-6 pe-3">
                        <h3 class="text-center fw-bold pt-3 pb-2">User Management</h3>
                        <%- include('createUser') %>
                    </div>
                    <div class="text-start col-md-6">

                        <%- include('deleteUser') %>
                        <%- include('editUser') %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
   

    <%- include('../layouts/footer') %>